@using KisiselWeb.Models.Classes
@model List<HomePage>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kisisel Web Sitesi</title>
    <link rel="stylesheet" href="~/web-KisiselWebSitesi/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>
<body>
    <div class="center">
        <div class="avatar">
            @foreach (var x in Model)
            {
            <img src="@x.profile" alt="">
            }
        </div>
        <div class="content">
            @foreach(var x in Model)
            {
            <h1>@x.name</h1>
            <h2>@x.job</h2>
            <p>@x.description</p>
            <h3>@x.contact</h3>

            }
        </div>
        @Html.Action("icons","HomePage")
    </div>
</body>
</html>